---
const { title } = Astro.props;

---


  <div>
        <label for="forname"></label><br>
        <input type="text" id="forname" name="forname" placeholder={title} required><br>
  </div>

    <style>


label{
    font-family: "Raleway", sans-serif;
    font-size: 16px;
    color: #D95C39;
}
/* styling af input */
input {
    width: 100%;
    background-color: rgba(183, 201, 187, 0.5);
    border: 2px solid #349894;  
    padding: 10px;               
    border-radius: 5px;   
    margin-top: 1rem;   
           
}


/* styling af specifikt teksten inde i forms */
input::placeholder {
    font-family: "Raleway", sans-serif;
    font-size: 14px;
    color: #D95C39;
}

@media screen and (min-width: 650px) { 
    input {
    font-size: 15px;
    width: 75%;      
} 
}
</style>