---
const { title3 } = Astro.props;

import Form1 from "../components/Form1.astro";
import Form2 from "../components/Form2.astro";
import Button from "../components/Button.astro"

---
<form> 
<section class="form_container">
    <h2>{title3}</h2>
    
  <div class="grid_1-1">

    <div> 
      <slot />
      <Form1 />
    </div>  

    <div> 
<div>
    <label for="dropdown"></label>
    <select id="dropdown" name="dropdown">
        <option value="option1">Jeg søger tilbuddet</option>
        <option value="option2">Samtale forløb</option>
        <option value="option3">Akutrådgivning</option>
        <option value="option4">Gruppeforløb</option>
