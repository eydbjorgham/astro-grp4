---
import "../styles/styles.css"
const { text, variant } = Astro.props;
---

<button class={variant}>{text}</button>

<style>
    button {
    border: none;
    outline: 0;
    display: inline-block;
    padding: 0.5rem;
    text-align: center;
    cursor: pointer;
    width: 30%;
    background-color: #D95D39;
    color: #F8F5F0;
    font-size: 28px;
    border-radius: 5px;
    transition: background-color 0.1s ease-in;
    }

    button:hover {
        background-color: #E5A823;
    }
</style>